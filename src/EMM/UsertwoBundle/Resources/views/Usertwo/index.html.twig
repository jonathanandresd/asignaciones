{% extends 'layout.html.twig' %}

{% block body -%}
    <h1>Usertwo list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Isactive</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usertwo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.role }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="actions" >
                <ul>
                    <li>
                        <a href="{{ path('usertwo_show', { 'id': entity.id }) }}" class="btn btn-sm btn-default">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usertwo_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usertwo_new') }}" class="btn btn-sm btn-info">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
